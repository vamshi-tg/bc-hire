-#     = render 'shared/error_messages', object: nil

- url= bulk_create_interview_topic_feedbacks_url(interview_id: interview_id)
- feedback_container_id= "topic-feedback-container-#{interview_id}"
- submit_button_id = "topic-feedback-submit-#{interview_id}"
- topic_feedback_errors = "topic-feedback-errors-#{interview_id}"

%div{id: feedback_container_id}
    .border.rounded.p-4
        .d-flex.justify-content-center.mb-4
            %H4= "Create Topic Feedback"

        = form_with id: "form_#{interview_id}" do
            - round_topics.each do |topic_key, topic_value|
                %h4
                    %i.fa.fa-angle-right
                    %span.text-primary= get_topic_feedback_name(topic_key).titleize
                %div
                    .d-flex.justify-content-between.flex-wrap.mb-2
                        .flex-1 Positives
                        %div.flex-6.d-flex
                            = text_area_tag "round[#{topic_key}][positives]", nil, class: "form-control", rows: 4
                    .d-flex.justify-content-between.mb-2
                        .flex-1 Negatives
                        %div.flex-6.d-flex
                            = text_area_tag "round[#{topic_key}][negatives]", nil, class: "form-control", rows: 4
                    .d-flex.justify-content-between
                        .flex-1 Candidate Level
                        %div.flex-6.d-flex
                            = text_area_tag "round[#{topic_key}][candidate_level]", nil, class: "form-control", rows: 4
                    %hr
            .d-flex.justify-content-center
                = submit_tag 'Submit Feedback', { id: submit_button_id, class: "btn btn-primary" }
            %div.mt-5{id: topic_feedback_errors}
:javascript
    $(document).ready(function(){
        var sumbit_button_id = "#" + "#{submit_button_id}";
        var feedback_container_id = "#" + "#{feedback_container_id}";
        var topic_feedback_errors = "#" + "#{topic_feedback_errors}";

        $(sumbit_button_id).click(function(e) {
            $(sumbit_button_id).attr("disabled", true);
            $.post({
                url: "#{url}",
                data: $("#form_#{interview_id}").serialize(),
                success: function(data) {
                    $(feedback_container_id).html(data.html);
                },
                error: function(xhr) {
                    $(sumbit_button_id).attr("disabled", false);   
                    if(xhr.status == 400) {
                        $(topic_feedback_errors).html(xhr.responseJSON.html);
                    } else {
                        $(topic_feedback_errors).html("<div class='alert alert-danger'> Something went wrong.</div>");
                    } 
                }
            });

            e.preventDefault();
        });
    });
    