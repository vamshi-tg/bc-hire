%div.mt-4{style: "width: 70%"}
    .d-flex.justify-content-end.my-2
        Update Application Status:
        .d-flex
            = render 'edit_application_status', application: application, status: "Accept"
            = render 'edit_application_status', application: application, status: "On Hold"
            = render 'edit_application_status', application: application, status: "Reject"

    .card
        .card-header
            .d-flex.justify-content-between
                %div.align-self-center Application Details
                %d-flex.flex-column
                    %div Current Status
                    .d-flex.justify-content-center
                        %span.badge.badge-pill.badge-secondary.status-pill= application.status.capitalize
        .card-body
            %h6.card-title= "Candidate Name: #{application.candidate.name}"
            %p.pt-2= "Candidate E-mail:  #{application.candidate.email}"
            %p= "Applying For:  #{application.role}"
            %p= "Experience: #{application.experience} years"
            = link_to "Resume", application.resume.path
            -# TODO:// Check another way to do this
            .d-flex.flex-row-reverse
                = link_to '<button class="btn btn-primary">Schedule Interview</button>'.html_safe, application_new_interview_path(application)